{
	"name": "egit",
	"version": "0.0.0-semantically-released",
	"description": "CLI package with simplified aliases for git commands",
	"main": "./bin/index.js",
	"scripts": {
		"lint": "prettier --write .",
		"test": "mocha || true",
		"commit": "git-cz",
		"preGenerateFiles": "node bin/index.js generatePreFiles",
		"install": "npm run preGenerateFiles",
		"validate": "npm-run-all --parallel lint test",
		"release": "semantic-release pre && npm publish && semantic-release post"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dillionmegida/egit.git"
	},
	"files": [
		"src",
		"bin"
	],
	"keywords": [
		"git, easy-git, e-git, git-aliases"
	],
	"author": "Dillion Megida <dillionmegida@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dillionmegida/egit/issues"
	},
	"homepage": "https://github.com/dillionmegida/egit#readme",
	"bin": {
		"egit": "./bin/index.js"
	},
	"dependencies": {
		"chalk": "^4.0.0"
	},
	"config": {
		"ghooks": {
			"pre-commit": "npm run validate",
			"commit-msg": "validate-commit-msg",
			"post-merge": "npm run preGenerateFiles"
		},
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"commitizen": "^4.0.4",
		"cz-conventional-changelog": "^3.1.0",
		"ghooks": "^2.0.4",
		"mocha": "^7.1.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.4",
		"semantic-release": "^17.0.6",
		"validate-commit-msg": "^2.14.0"
	}
}
